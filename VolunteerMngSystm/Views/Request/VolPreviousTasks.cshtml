@model IEnumerable<VolunteerMngSystm.Models.VolunteeringTask>

@{
    Layout = "~/Views/Shared/_VolunteerLayout.cshtml";
    ViewData["Title"] = "PastVolTaskList";
}

<h1>Previous Accepted Tasks</h1>
<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime_of_Task)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.End_Time_of_Task)
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime_of_Task)
                    </td>
                     <td>
                            @Html.DisplayFor(modelItem => item.End_Time_of_Task)
                        </td>
                    <td>
                        <a asp-action="VolTaskDetails" asp-route-id="@item.ID" asp-route-usrId="@ViewBag.usrId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (((System.Collections.Generic.List<VolunteerMngSystm.Models.VolunteeringTask>)Model).Count == 0)
{
    <p class="alert-info" style="font-size:20px">You have not accepted any tasks yet</p>
}
<a asp-action="VolTaskList" asp-route-id="@ViewBag.usrId">Back</a>
