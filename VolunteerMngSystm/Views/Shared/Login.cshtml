@model VolunteerMngSystm.Models.Users



@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" style="font-weight: bold;" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <span asp-validation-for="Email" class="text-danger">@ViewBag.notExists</span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" style="font-weight: bold;" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-dark" />
                </div>or
                <br /><br />

                <a class="btn btn-secondary" style="width:225px;" asp-area="" asp-controller="Users" asp-action="Create">Register as a Volunteer</a>
                <br /><br />
                <a class="btn btn-outline-dark" style="width:225px;" asp-area="" asp-controller="Users" asp-action="OrgReg">Register as an Organisation</a>
            </form>
        </div>
        <br />
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}
