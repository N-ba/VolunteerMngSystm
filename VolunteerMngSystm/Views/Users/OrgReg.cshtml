@model VolunteerMngSystm.Models.Organisations;

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h5>As Organisation</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrgReg">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Organisation_name" style="font-weight: bold;" class="control-label">Organisation Name</label>
                <input asp-for="Organisation_name" class="form-control" />
                <span asp-validation-for="Organisation_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" style="font-weight: bold;" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span asp-validation-for="Email" class="text-danger">@ViewBag.EmailExists</span>
            </div>
            <div class="form-group">
                <label asp-for="Industry" style="font-weight: bold;" class="control-label"></label>
                <input asp-for="Industry" class="form-control" />
                <span asp-validation-for="Industry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" style="font-weight: bold;" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div><br /><br />
            <div class="form-group">
                <label asp-for="OrganisationsID" style="font-weight: bold;" class="control-label">Verification ID</label>
                <input asp-for="OrganisationsID" type="file" accept="image/* " />
                <span asp-validation-for="OrganisationsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}