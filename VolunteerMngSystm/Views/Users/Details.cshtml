@model VolunteerMngSystm.Models.OrgVolDetailsViewModel

@{
    Layout = "~/Views/Shared/_OrgLayout.cshtml";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Forename)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Forename)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Gender)
        </dd>
        <dt class="col-sm-2">
            Expertise
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var i in Model.Expertises)
                {
                    <li>
                        @i.Subject
                    </li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Email)
        </dd>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Phone_number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Phone_number)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-controller="Users" asp-route-taskId="@ViewBag.TaskId" asp-route-orgId="@ViewBag.OrgId">Back to List</a>
</div>
