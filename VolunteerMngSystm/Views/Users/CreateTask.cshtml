@model VolunteerMngSystm.Models.VolunteeringTask

@{
    Layout = "~/Views/Shared/_OrgLayout.cshtml";
    ViewData["Title"] = "NewTask";
}

<h1>Creat new Task</h1>

<h5>As Volunteer</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numOfVols" class="control-label">Number of requred volunteers</label>
                <input asp-for="numOfVols" type="number" class="form-control" />
                <span asp-validation-for="numOfVols" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_of_Task" class="control-label">Date</label>
                <input asp-for="Date_of_Task" type="date" class="form-control" />
                <span asp-validation-for="Date_of_Task" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time_of_Task" class="control-label">Start Time</label>
                <input asp-for="Time_of_Task" type="time" class="form-control" />
                <span asp-validation-for="Time_of_Task" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="End_Time_of_Task" class="control-label">End Time</label>
                <input asp-for="End_Time_of_Task" type="time" class="form-control" />
                <span asp-validation-for="End_Time_of_Task" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Required Expereice in</label>
                <p>@Html.DropDownListFor(model => model.Expertise_ID, new SelectList(Model.ExperiseList, "ID", "Subject"), "--Select an Expertise--")</p>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postal_Code" class="control-label">Postal Code</label>
                <input asp-for="Postal_Code" class="form-control" />
                <span asp-validation-for="Postal_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creat Task" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}